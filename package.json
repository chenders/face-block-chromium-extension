{
  "name": "face-block-chromium-extension",
  "version": "1.0.0",
  "type": "module",
  "description": "Privacy-focused Chromium extension that blocks images of specified people",
  "scripts": {
    "test": "playwright test",
    "test:headed": "HEADED=1 playwright test",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:perf": "npm run perf:generate && playwright test performance-profiling.spec.js",
    "test:perf:headed": "npm run perf:generate && HEADED=1 playwright test performance-profiling.spec.js",
    "perf:generate": "node scripts/generate-performance-test-page.js",
    "lint": "eslint extension/**/*.js tests/**/*.js scripts/**/*.js --no-warn-ignored",
    "lint:fix": "eslint extension/**/*.js tests/**/*.js scripts/**/*.js --fix --no-warn-ignored",
    "format": "prettier --write \"extension/**/*.{js,html,css,json}\" \"tests/**/*.js\" \"scripts/**/*.js\"",
    "format:check": "prettier --check \"extension/**/*.{js,html,css,json}\" \"tests/**/*.js\" \"scripts/**/*.js\"",
    "build": "bash build-for-store.sh",
    "prebuild": "npm run lint && npm run format:check",
    "screenshots": "node scripts/capture-screenshots.js",
    "prepare": "husky"
  },
  "keywords": [
    "chrome-extension",
    "face-recognition",
    "privacy"
  ],
  "author": "Chris Henderson <chris@groundeffectsoftware.com>",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "prettier": "^3.6.2"
  }
}
